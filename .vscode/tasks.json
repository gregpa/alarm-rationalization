{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run App Locally",
      "type": "shell",
      "command": "streamlit run streamlit_app.py",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "isBackground": true,
      "group": "test"
    },
    {
      "label": "Validate Code",
      "type": "shell",
      "command": "python -m py_compile streamlit_app.py && echo 'Syntax OK'",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "group": "test"
    },
    {
      "label": "Validate + Deploy",
      "type": "shell",
      "command": "python -m py_compile streamlit_app.py && echo 'Syntax OK - deploying...' && ./deploy.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "python -m pytest tests/ -v --tb=short",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "test"
    },
    {
      "label": "Run Tests + Deploy",
      "type": "shell",
      "command": "python -m pytest tests/ -v --tb=short && echo 'Tests passed - deploying...' && ./deploy.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "build"
    },
    {
      "label": "Quick Commit (validate first)",
      "type": "shell",
      "command": "python -m py_compile streamlit_app.py && git add -A && git commit",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false
      }
    },
    {
      "label": "Deploy to Production",
      "type": "shell",
      "command": "./deploy.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Git Status",
      "type": "shell",
      "command": "git status && echo '' && git log --oneline -5",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "Install Test Dependencies",
      "type": "shell",
      "command": "pip install pytest pytest-cov",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    }
  ]
}
